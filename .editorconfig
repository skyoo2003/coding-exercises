root = true

[*]
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[Makefile]
indent_style = tab
indent_size = 4

[*.go]
indent_style = tab
indent_size = 4

[*.py]
indent_size = 4

[*.{sh.bat}]
indent_size = 4

[*.{md,rst}]
indent_size = 2
